    </RelativeLayout>
    <RelativeLayout android:background="@drawable/alert_dialog_bottombar_bg" android:layout_width="fill_parent" android:layout_height="@dimen/Trim_Save_CancelLayout_Height">
        <Button android:id="@id/cancel_trim" android:background="@drawable/btn_trim_dialog_cancel" android:layout_width="@dimen/Trim_Save_CancelBtn_LayWidht" android:layout_height="wrap_content" android:text="@string/Cancel" android:layout_centerInParent="true" />
    </RelativeLayout>
