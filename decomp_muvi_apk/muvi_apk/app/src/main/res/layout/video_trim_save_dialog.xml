        <TextView android:textSize="@dimen/Trim_Save_Title_TextSize" android:id="@id/Title_Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/Trim_Save_DialogLayout_Title_Margin_Left" android:text="@string/str_Trim_Dialog_Title" android:layout_toRightOf="@id/Icon_Image" android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout android:background="@drawable/alert_dialog_titlebar_content_bg" android:layout_width="fill_parent" android:layout_height="@dimen/Trim_Save_DialogLayout_ProgressInfo_Height">
