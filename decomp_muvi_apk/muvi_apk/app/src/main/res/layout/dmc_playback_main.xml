<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/dmc_playback_bg_repeat" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/dmc_playback_title" />
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/dmc_tv" android:background="@drawable/dmc_tv_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/playback_tvbg_margin_left" android:layout_marginTop="@dimen/playback_tvbg_margin_top" android:layout_below="@id/dmc_playback_title_bar" android:layout_centerHorizontal="true">
        <ListView android:id="@id/dmc_playing_list" android:visibility="gone" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="@dimen/playback_list_height" android:cacheColorHint="#00000000" android:fastScrollEnabled="false" />
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/dmc_playing_tv" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <FrameLayout android:background="@drawable/dmc_tv" android:layout_width="@dimen/playback_tv_width" android:layout_height="@dimen/playback_tv_height" android:layout_marginTop="@dimen/playback_tv_margin_top">
                <ImageView android:id="@id/dmc_thumbnail" android:paddingLeft="@dimen/tv_content_padding_left" android:paddingTop="@dimen/tv_content_padding_top" android:paddingRight="@dimen/tv_content_padding_right" android:paddingBottom="@dimen/tv_content_padding_bottom" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/dmc_playback_tv_default" android:scaleType="fitXY" />
                <ProgressBar android:layout_gravity="center" android:id="@id/dmc_playback_progress" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/workshop_saving_progress" />
            </FrameLayout>
            <TextView android:textSize="@dimen/playback_title_text_large_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@id/tv_playing_content" android:paddingLeft="5.0dip" android:paddingRight="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/playback_title_margin_top" android:singleLine="true" />
            <TextView android:textSize="@dimen/playback_title_text_small_size" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@id/tv_playing_device" android:paddingLeft="5.0dip" android:paddingRight="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_dmc_playling_content" android:maxLines="2" />"
</LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/dmc_control" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="@dimen/playback_progressbar_margin_bottom">
            <TextView android:textSize="@dimen/tv_progress_text_size" android:gravity="right|center" android:id="@id/dmc_current_time" android:layout_width="@dimen/playback_progress_time_width" android:layout_height="@dimen/playback_progress_thumb_height" android:text="@string/str_time_seconds" android:singleLine="true" />
            <SeekBar android:scrollbarStyle="insideOverlay" android:id="@id/dmc_seek_bar" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="@dimen/playback_progress_width" android:layout_height="@dimen/playback_progress_thumb_height" android:layout_marginLeft="@dimen/playback_progress_distance" android:layout_marginRight="@dimen/playback_progress_distance" android:maxWidth="@dimen/playback_progress_width" android:maxHeight="@dimen/playback_progress_height" android:secondaryProgress="0" android:progressDrawable="@drawable/dmc_progress" android:minWidth="@dimen/playback_progress_width" android:minHeight="@dimen/playback_progress_height" android:thumb="@drawable/dcm_playback_progress_thumb" />
            <TextView android:textSize="@dimen/tv_progress_text_size" android:gravity="left|center" android:id="@id/dmc_total_time" android:layout_width="@dimen/playback_progress_time_width" android:layout_height="@dimen/playback_progress_thumb_height" android:text="@string/str_time_seconds" android:singleLine="true" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/playback_ctlbar_margin_bottom">
            <ImageButton android:id="@id/dmc_prev_btn" android:background="@drawable/btn_dmc_play_prev" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <ImageButton android:id="@id/dmc_play_pause" android:background="@drawable/btn_dmc_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/playback_playing_btn_margin_left" android:layout_weight="1.0" />
            <ImageButton android:id="@id/dmc_next_btn" android:background="@drawable/btn_dmc_play_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/playback_playing_btn_margin_left" android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>